<%- model_class = Bicycle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:avatar_file_name) %></th>
      <th><%= model_class.human_attribute_name(:avatar_content_type) %></th>
      <th><%= model_class.human_attribute_name(:avatar_file_size) %></th>
      <th><%= model_class.human_attribute_name(:avatar_updated_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bicycles.each do |bicycle| %>
      <tr>
        <td><%= link_to bicycle.id, bicycle_path(bicycle) %></td>
        <td><%= bicycle.name %></td>
        <td><%= bicycle.description %></td>
        <td><%= bicycle.category %></td>
        <td><%= bicycle.user_id %></td>
        <td><%= bicycle.avatar_file_name %></td>
        <td><%= bicycle.avatar_content_type %></td>
        <td><%= bicycle.avatar_file_size %></td>
        <td><%= bicycle.avatar_updated_at %></td>
        <td><%=l bicycle.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      bicycle_path(bicycle), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bicycle_path(bicycle), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bicycle_path(bicycle),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bicycle_path,
            :class => 'btn btn-primary' %>
